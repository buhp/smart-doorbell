# ESPHome Secrets File
# 
# This file stores sensitive information like WiFi credentials and passwords
# Copy this file to secrets.yaml in your ESPHome configuration directory
# Default location: 
#   - Windows: %APPDATA%\esphome\secrets.yaml
#   - Linux/Mac: ~/.esphome/secrets.yaml
#
# IMPORTANT: Never commit this file to version control!
# Add secrets.yaml to your .gitignore file

# WiFi Credentials
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Fallback Access Point (when WiFi fails)
ap_password: "fallback12345"

# API Encryption Key (generate with: esphome dashboard, it will auto-generate)
# Or generate manually with: openssl rand -base64 32
api_encryption_key: "your-32-character-encryption-key-here="

# OTA Update Password
ota_password: "your-ota-password-here"

# Web Server Credentials (optional, for debugging)
web_username: "admin"
web_password: "your-web-password-here"
